<div class="container col-4" data-controller="placesjs">
  <h1 class="text-center">Add your Pokemon</h1>
  <%= simple_form_for @pokemon, html: { data: { controller: "image-preview"} } do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :location, input_html: { "data-placesjs-target": "location" } %>
    <%= f.association :kinds, as: :check_boxes %>
    <%= f.input :photo,
      input_html: {
        class: 'd-none',
        data: { image_preview_target: "input" }
      }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
    <%= image_tag "",
      width: 300,
      class: "hidden",
      data: { image_preview_target: "preview" } %>
    <%= f.submit %>
  <% end %>
</div>